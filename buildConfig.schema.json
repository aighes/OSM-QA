{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Build Configuration Schema",
  "type": "object",
  "required": ["BuildItems"],
  "properties": {
    "BuildItems": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["Source", "Compress", "Destination"],
        "properties": {
          "Source": { "type": "string" },
          "Compress": { "type": "boolean" },
          "Destination": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
